@using AspMVC171212_BlogSitesi.Models.Entity
@model Personel
@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 bg-secondary">
            @using (Html.BeginForm("Login","Identity",FormMethod.Post))
            {
                <h4>Hoşgeldiniz</h4>


                <div class="form-group">
                    
                    @Html.TextBoxFor(x => x.KullaniciAdi, new {@class= "form-control input-sm chat-input",placeholder="Kullanıcı Adı" })
                </div>

                <div class="form-group">
                   
                    @Html.PasswordFor(x => x.Sifre, new { @class = "form-control input-sm chat-input", placeholder = "Parola" })
                </div>

                <button type="submit" class="btn btn-primary btn-md">Giriş Yap <i class="fa fa-sign-in"></i></button>




           
            }
            

        </div>
    </div>
</div>

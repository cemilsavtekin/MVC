@using AspMVC171212_BlogSitesi.Models.Entity
@model List<Kategori>


<div class="card my-4">
    <h5 class="card-header">Kategoriler</h5>
    <div class="card-body">
        <div class="row">
            @foreach (var ktg in Model)
            {
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <a href="/Home/Index/@ktg.ID">@ktg.Ad</a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
